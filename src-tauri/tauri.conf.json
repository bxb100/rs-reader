{
    "build": {
        "beforeDevCommand": "pnpm dev",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "rs-reader",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "fs": {
                "scope": [
                    "$TEMP/**",
                    "$APPCONFIG/**",
                    "$APPDATA/**",
                    "$DOWNLOAD/**"
                ],
                "all": true,
                "readFile": true
            },
            "path": {
                "all": true
            },
            "dialog": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "rs-reader",
                "width": 800,
                "height": 600,
                "fileDropEnabled": true,
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.tauri.dev",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        }
    }
}
