root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
max_line_length = 100
insert_final_newline = true
trim_trailing_whitespace = true

[{*.gyp,*.yml,*.yaml}]
indent_size = 2

[{*.md,*.tsv}]
trim_trailing_whitespace = false

# Ideal settings - some plugins might support these.
[*.js]
ij_javascript_use_double_quotes = false